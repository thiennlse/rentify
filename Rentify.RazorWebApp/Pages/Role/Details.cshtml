@page
@model Rentify.RazorWebApp.Pages.Role.DetailsModel

@{
    ViewData["Title"] = "Role Details";
}

<h1>Role Details</h1>
<hr />
<dl class="row">
    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Role.Name)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.Role.Name)</dd>
    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Role.Description)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.Role.Description)</dd>
    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Role.CreatedAt)</dt>
    <dd class="col-sm-9">@Model.Role.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>
    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Role.UpdatedAt)</dt>
    <dd class="col-sm-9">@Model.Role.UpdatedAt.ToString("yyyy-MM-dd HH:mm")</dd>
    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Role.IsDeleted)</dt>
    <dd class="col-sm-9">
        @if (Model.Role.IsDeleted)
        {
            <span class="badge bg-danger">Deleted</span>
        }
        else
        {
            <span class="badge bg-success">Active</span>
        }
    </dd>
</dl>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Role.Id" class="btn btn-primary">Edit</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>
