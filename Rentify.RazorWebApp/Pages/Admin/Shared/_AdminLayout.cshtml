<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rentify Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <div class="">
        <!-- Sidebar navigation -->
        <nav class="admin-sidebar text-white">
            <a href="/Admin/Dashboard" class="sidebar-brand text-decoration-none">
                <i class="fas fa-crown me-2"></i>
                Admin Panel
            </a>
            
            <div class="p-3">
                <ul class="nav flex-column sidebar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Admin/Dashboard">
                            <i class="fas fa-tachometer-alt me-3"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Admin/Users/Index">
                            <i class="fas fa-users me-3"></i>Quản lý User
                        </a>
                    </li>
                    <li class ="nav-item">
                        <a class="nav-link" asp-page="/PostPages/Index">
                            <i class="fas fa-tachometer-alt me-2"></i>Quản lí bài viết
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Admin/Roles/Index">
                            <i class="fas fa-user-tag me-3"></i>Quản lý Role
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Admin/Category/Index">
                            <i class="fas fa-tags me-3"></i>Quản lý Category
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/ItemPages/Index">
                            <i class="fas fa-box me-3"></i>Quản lý Items
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Admin/Rentals/Index">
                            <i class="fas fa-handshake me-3"></i>Quản lý Rentals
                        </a>
                    </li>
                </ul>
                
                <!-- User info và logout ở sidebar -->
                <div class="mt-5 pt-4 border-top border-light border-opacity-25">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-white bg-opacity-20 rounded-circle p-2 me-3">
                            <i class="fas fa-user text-white"></i>
                        </div>
                        <div>
                            <div class="fw-semibold">@(Context.Request.Cookies["UserName"] ?? User.Identity.Name)</div>
                            <small class="text-white-50">Administrator</small>
                        </div>
                    </div>
                    <a class="btn btn-outline-light btn-sm w-100" asp-page="/Account/Logout">
                        <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                    </a>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="admin-main">
            <!-- Top Bar -->
            <header class="admin-topbar">
                <div class="topbar-left">
                    <button class="sidebar-toggle" id="sidebarToggle">
                        <i class="fas fa-bars"></i>
                    </button>
                    <h5 class="page-title mb-0">@ViewData["Title"]</h5>
                </div>
                
                <div class="topbar-right">
                    <!-- Added chat notification icon -->
                    <div class="topbar-item">
                        <a href="/Admin/Chat/Index" class="topbar-link" title="Chat Management">
                            <i class="fas fa-comments"></i>
                            <span class="badge bg-danger" id="chatNotificationBadge" style="display: none;">0</span>
                        </a>
                    </div>
                    
                    <div class="topbar-item dropdown">
                        <a class="topbar-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user-circle"></i>
                            <span>@(Context.Request.Cookies["UserName"] ?? User.Identity.Name)</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="/Admin/Dashboard"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a></li>
                            <li><a class="dropdown-item" href="/ChatPages/Chat"><i class="fas fa-comments me-2"></i>Chat</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" href="/Account/Logout"><i class="fas fa-sign-out-alt me-2"></i>Đăng xuất</a></li>
                        </ul>
                    </div>
                </div>
            </header>

            <!-- Content Area -->
            <main class="admin-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Added SignalR for real-time chat notifications -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>
    <script>
        // Admin layout chat notifications
        $(document).ready(function() {
            // Sidebar toggle
            $('#sidebarToggle').click(function() {
                $('.admin-wrapper').toggleClass('sidebar-collapsed');
            });

            // Initialize SignalR for admin notifications
            initAdminNotifications();
        });

        async function initAdminNotifications() {
            try {
                const connection = new signalR.HubConnectionBuilder()
                    .withUrl("/chatHub")
                    .build();

                connection.on("ReceiveMessage", function(message) {
                    // Update chat notification badge
                    updateChatNotification();
                });

                connection.on("UserOnline", function(userId, userName) {
                    // Could show online user notifications
                });

                await connection.start();
                await connection.invoke("RegisterUser", "@(Context.Request.Cookies["UserId"] ?? "")", "@(Context.Request.Cookies["UserName"] ?? "")");
            } catch (err) {
                console.error('Admin SignalR connection error:', err);
            }
        }

        function updateChatNotification() {
            const badge = $('#chatNotificationBadge');
            let count = parseInt(badge.text()) || 0;
            count++;
            badge.text(count).show();
        }
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
