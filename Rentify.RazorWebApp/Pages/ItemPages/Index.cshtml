@page
@model Rentify.RazorWebApp.Pages.ItemPages.IndexModel

@{
    ViewData["Title"] = "Items";
}

<style>
    .index-container {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 2rem 0;
    }

    .index-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        padding: 2.5rem;
        margin: 2rem auto;
        max-width: 1200px;
        animation: slideInUp 0.6s ease-out;
    }

    .index-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #e9ecef;
    }

    .index-title {
        background: linear-gradient(135deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0;
    }

    .btn-create {
        background: linear-gradient(135deg, #00b894, #00cec9);
        border: none;
        color: white;
        padding: 12px 25px;
        border-radius: 25px;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0, 184, 148, 0.3);
    }

        .btn-create:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 184, 148, 0.4);
            background: linear-gradient(135deg, #00cec9, #00b894);
            color: white;
            text-decoration: none;
        }

    .items-table {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .table {
        margin: 0;
    }

        .table thead th {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border: none;
            padding: 1rem 0.75rem;
            font-size: 0.875rem;
        }

        .table tbody tr {
            transition: all 0.3s ease;
        }

            .table tbody tr:hover {
                background: linear-gradient(135deg, #f8f9fa, #e9ecef);
                transform: scale(1.01);
            }

        .table tbody td {
            padding: 1rem 0.75rem;
            vertical-align: middle;
            border-color: #e9ecef;
        }

    .status-badge {
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        background: linear-gradient(135deg, #00b894, #00cec9);
        color: white;
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
    }

    .btn-action {
        padding: 0.375rem 0.75rem;
        border-radius: 15px;
        font-size: 0.875rem;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.3s ease;
        border: none;
    }

    .btn-edit {
        background: linear-gradient(135deg, #fdcb6e, #e17055);
        color: white;
    }

        .btn-edit:hover {
            background: linear-gradient(135deg, #e17055, #fdcb6e);
            color: white;
            text-decoration: none;
            transform: translateY(-1px);
        }

    .btn-details {
        background: linear-gradient(135deg, #74b9ff, #0984e3);
        color: white;
    }

        .btn-details:hover {
            background: linear-gradient(135deg, #0984e3, #74b9ff);
            color: white;
            text-decoration: none;
            transform: translateY(-1px);
        }

    .btn-delete {
        background: linear-gradient(135deg, #ff7675, #fd79a8);
        color: white;
    }

        .btn-delete:hover {
            background: linear-gradient(135deg, #fd79a8, #ff7675);
            color: white;
            text-decoration: none;
            transform: translateY(-1px);
        }

    .empty-state {
        text-align: center;
        padding: 3rem;
        color: #666;
    }

    .empty-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
        opacity: 0.5;
    }
</style>

<div class="index-container">
    <div class="container">
        <div class="index-card">
            <div class="index-header">
                <h1 class="index-title">Items Management</h1>
                <a asp-page="Create" class="btn-create">+ Create New Item</a>
            </div>

            @if (Model.Item.Any())
            {
                <div class="items-table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Item[0].Code)</th>
                                <th>@Html.DisplayNameFor(model => model.Item[0].Name)</th>
                                <th>@Html.DisplayNameFor(model => model.Item[0].Description)</th>
                                <th>@Html.DisplayNameFor(model => model.Item[0].Price)</th>
                                <th>@Html.DisplayNameFor(model => model.Item[0].Quantity)</th>
                                <th>@Html.DisplayNameFor(model => model.Item[0].Status)</th>
                                <th>@Html.DisplayNameFor(model => model.Item[0].Category)</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Item)
                            {
                                <tr>
                                    <td><strong>@Html.DisplayFor(modelItem => item.Code)</strong></td>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                    <td><strong>@Html.DisplayFor(modelItem => item.Price)</strong></td>
                                    <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                                    <td>
                                        <span class="status-badge">
                                            @Html.DisplayFor(modelItem => item.Status)
                                        </span>
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
                                    <td>
                                        <div class="action-buttons">
                                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn-action btn-edit">Edit</a>
                                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn-action btn-details">Details</a>
                                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn-action btn-delete">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-icon">📦</div>
                    <h3>No items found</h3>
                    <p>Start by creating your first item.</p>
                    <a asp-page="Create" class="btn-create">Create First Item</a>
                </div>
            }
        </div>
    </div>
</div>
