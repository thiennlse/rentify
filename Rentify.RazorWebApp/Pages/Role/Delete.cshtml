@page
@model Rentify.RazorWebApp.Pages.Role.DeleteModel

@{
    ViewData["Title"] = "Delete Role";
}

<h1>Delete Role</h1>
<hr />
<div class="alert alert-warning">
    <strong>Are you sure you want to delete this role?</strong>
</div>
<dl class="row">
    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Role.Name)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.Role.Name)</dd>
    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Role.Description)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.Role.Description)</dd>
</dl>
<form method="post">
    <input type="hidden" asp-for="Role.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
