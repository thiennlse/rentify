@page
@model IndexModel

@{
    ViewData["Title"] = "Quản lý Danh mục";
}

@* TODO: Cần phải Move vào CSS file chung hoặc module để clean code  *@
<style>
    :root {
        --primary-color: #0d6efd;
        --border-radius: 0.5rem;
        --table-border-color: #f0f0f0;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .card {
        border: 1px solid var(--table-border-color); 
        border-radius: var(--border-radius);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06); 
        overflow: hidden;
    }
    
    .table {
        margin-bottom: 0;
    }

    .table th, .table td {
        padding: 16px 24px;
        vertical-align: middle;
        border-top: 1px solid var(--table-border-color);
        white-space: nowrap; 
    }
    
    .table thead th {
        background-color: #fafafa;
        border-bottom: 1px solid var(--table-border-color);
        font-weight: 600;
        color: #000;
        text-transform: none;
    }

    .table tbody tr:hover {
        background-color: #fafafa;
    }

    .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
        border-radius: var(--border-radius);
        padding: 0.5rem 1rem;
    }
    
    .action-links a {
        color: var(--primary-color);
        text-decoration: none;
        margin-right: 16px;
    }
    .action-links a:hover {
        text-decoration: underline;
    }
    .action-links a:last-child {
        margin-right: 0;
    }
</style>

<div class="container-fluid py-4">

    <div class="page-header">
        <h1 class="h3 mb-0">@ViewData["Title"]</h1>
        <a asp-page="Create" class="btn btn-primary d-flex align-items-center">
            <i class="fas fa-plus me-2"></i> Create New
        </a>
    </div>

    <div class="card">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Category[0].Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Category[0].Description)</th>
                        <th>@Html.DisplayNameFor(model => model.Category[0].CreatedBy)</th>
                        <th>@Html.DisplayNameFor(model => model.Category[0].UpdatedBy)</th>
                        <th>@Html.DisplayNameFor(model => model.Category[0].CreatedAt)</th>
                        <th>@Html.DisplayNameFor(model => model.Category[0].UpdatedAt)</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Category)
                    {
                        <tr>
                            <td>
                                <a asp-page="./Details" asp-route-id="@item.Id" class="fw-bold">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedBy)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UpdatedBy)
                            </td>
                            <td>
                                @item.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                            </td>
                            <td>
                                @item.UpdatedAt.ToString("dd/MM/yyyy HH:mm")
                            </td>
                            <td>
                                @if (item.IsDeleted)
                                {
                                    <span class="badge bg-secondary">Deleted</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                            </td>
                            <td class="action-links">
                                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>