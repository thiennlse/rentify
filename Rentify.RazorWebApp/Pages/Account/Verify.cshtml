@page "{email?}"
@model Rentify.RazorWebApp.Pages.Account.Verify

@{
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Verify OTP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>

<body class="body">
<div class="container mt-4">
    <h2 class="text-center">Xác thực tài khoản</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info">@TempData["Message"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="col-md-4 mx-auto">
        <form method="post" asp-page-handler="Verify">
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input class="form-control" asp-for="Email" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Mã OTP</label>
                <input class="form-control" asp-for="Code" maxlength="6" placeholder="Nhập 6 số" required />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-success">Xác thực</button>
            </div>
        </form>

        <form method="post" asp-page-handler="Resend" class="mt-3">
            <input type="hidden" asp-for="Email" />
            <button type="submit" class="btn btn-outline-primary w-100">Gửi lại OTP</button>
        </form>

        <div class="mt-3 text-center">
            <a asp-page="/Account/Login">Quay lại đăng nhập</a>
        </div>
    </div>
</div>
</body>